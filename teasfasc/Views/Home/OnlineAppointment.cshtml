@model DentApexis.MODEL.Entity.OnlineAppointment
@{
    ViewBag.Title = "OnlineAppointment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<style>

    .head1 {
        color: red !important;
        text-align: right !important;
        padding-bottom: 1em;
        margin-left: 1em;
    }

    .head2 {
        color: red !important;
        text-align: left !important;
        padding-bottom: 1em;
        margin-left: 5em;
    }
</style>
<body>
    <!-- #header -->
    <!-- start banner Area -->
    <section class="banner-area relative about-banner" id="home">
        <div class="overlay overlay-bg"></div>
        <div class="container">
            <div class="row d-flex align-items-center justify-content-center">
                <div class="about-content col-lg-12">
                    <h1 class="text-white">
                        Online Randevu
                    </h1>
                    <p class="text-white link-nav"><a href="/Home/Index">Anasayfa </a>  <span class="lnr lnr-arrow-right"></span>  <a href="/Home/OnlineAppointment"> Online Randevu</a></p>
                </div>
            </div>
        </div>
    </section>
    <!-- End banner Area -->
    <!-- Start price Area -->
    <!-- End price Area -->
    <!-- Start team Area -->
    <section class="team-area section-gap" id="team">
        <div class="container">
            <div class="row d-flex justify-content-center">
                <div class="menu-content pb-70 col-lg-8">
                    <div class="title text-center">
                        <h1 class="mb-10">Kliniğimiz</h1>
                        <p>“...” ailesi olarak en temel ilkemiz hasta hakları ve memnuniyeti ön planda tutularak dürüstlük kuralları çerçevesinde en kaliteli hizmeti en kısa sürede sunmaktır. Bünyemizdeki Uzman Kadromuzun bilgi ve tecrübeleri ise bu ilkemiz ışığında bizi bir arada tutarak günden güne büyüyen bir aile olmamıza destek sağlamaktadır.</p>
                    </div>
                </div>
            </div>

        </div>
    </section>
    <!-- End team Area -->
    <section class="appoinment-area section-gap relative">
        <div class="container">
            <div class="row align-items-center justify-content-end">
                <div class="col-lg-6 no-padding appoinment-right">
                    <h1 class="text-white">
                        Online Randevu Al
                    </h1>

                    @using (Html.BeginForm("OnlineAppointment", "Home", FormMethod.Post))
                    {

                        <div class="box">
                            <div class="head1">
                                @Html.TextBoxFor(x => x.FirstName, new { @class = "head1 form-control", placeholder = "İsim:", type = "text" })
                                <span class="focus-input100"></span>
                            </div>
                            <div class="head1">

                                @Html.TextBoxFor(x => x.LastName, new { @class = "head2 form-control", placeholder = "Soyisim:", type = "text" })
                                <span class="focus-input100"></span>
                            </div>
                            <div class="head1">
                                @Html.TextBoxFor(x => x.TelNo, new { @class = "head1 form-control", placeholder = "Tel No:", type = "text" })
                                <span class="focus-input100"></span>
                            </div>
                            <div class="head1">
                                @Html.TextBoxFor(x => x.Description, new { @class = "head2 form-control", placeholder = "Açıklama", type = "text" })
                                <span class="focus-input100"></span>
                            </div>
                            <div class="head1">
                                @Html.TextBoxFor(x => x.Email, new { @class = "head1 form-control", placeholder = "Email", type = "email" })
                                <span class="focus-input100"></span>
                            </div>
                            <div class="col-md-7" style="padding-left:5em;">
                                @*<button class="btn-block btn-success" type="submit">Online Randevu</button>*@


                                <button class="primary-btn primary mt-20 text-uppercase ">Randevu Onayla</button>
                            </div>


                        </div>
                    }




                </div>
            </div>
        </div>
    </section>
    <!-- Start feature Area -->
    <!-- End footer Area -->

    <script src="js/vendor/jquery-2.2.4.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="js/vendor/bootstrap.min.js"></script>
    <script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBhOdIF3Y9382fqJYt5I_sswSrEw5eihAA"></script>
    <script src="js/easing.min.js"></script>
    <script src="js/hoverIntent.js"></script>
    <script src="js/superfish.min.js"></script>
    <script src="js/jquery.ajaxchimp.min.js"></script>
    <script src="js/jquery.magnific-popup.min.js"></script>
    <script src="js/jquery-ui.js"></script>
    <script src="js/owl.carousel.min.js"></script>
    <script src="js/jquery.nice-select.min.js"></script>
    <script src="js/mail-script.js"></script>
    <script src="js/main.js"></script>
</body>